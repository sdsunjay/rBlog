<div class="well post-single">
  <h2 class="page-header"><%= @post.title %></h2>
<% if false %>
  <small>Posted by <%= @post.user.first_name %> <%= @post.user.last_name %> on <%= post.created_at.to_time.strftime('%B %e at %l:%M %p' ) %></small>
<% end %>  
<%= image_tag @post.image.url, width:'100%' %>
  <%= raw @post.body %>
</div>


