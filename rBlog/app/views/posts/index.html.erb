<div id="posts-index">
 <% if @posts.exists? %>
  <% @posts.each_slice(2) do |post| %>
   <div class="row">
    <% post.each do |p| %>
      <div class="col-md-6">
        <div class="post">
            <% image_tag p.image.url, width: '100%' %>
            <div class="post-content">
                <h3><%= p.title %></h3>
<small>Posted by <%= p.user.first_name %>  <%= p.user.last_name %> on <%= p.created_at.to_time.strftime('%B %e at %l:%M %p') %></small>
  <%= raw p.body.truncate(200) %>
		<%= link_to "Read More", post_path(p), class: "btn btn-primary" %>
            </div>
        </div>
      </div>
    <% end %>
   </div>
  <% end %>
 <% else %>
   <p>No posts yet</p>
  <% end %>
</div>
